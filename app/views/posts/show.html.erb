<% content_for(:title) {@post.title} %>

<section id="blog">
  <div class="hgroup">
    <h1><%= @post.title %></h1>
    <h2><i class="icon-time"></i> <%= @post.published_on %> <a href="#post_comments"><i class="icon-comments-alt"></i> <%= @post.comments.count > 0 ? @post.comments.count : 'Comment?' %></a></h2>
    <ul class="breadcrumb pull-right">
      <li><a href="<%= root_path %>">Home</a> <span class="divider">/</span></li>
      <li><a href="<%= post_path %>">Blog</a></li>
    </ul>
  </div>
  <div class="row">
    <div id="leftcol" class="span8">
      <article class="post">
        <div class="post_content">
          <%= @post.body.html_safe %>
        </div>
      </article>
      <div id="post_comments">
        <h4>Comments</h4>
        <div class="comment">

        <% @post.comments.each do |comment| %>

          <div class="row">
            <figure class="span1"> <img class="img-circle" src="<%= asset_path("1as.jpg") %>" alt=""> </figure>
            <div class="span7">
              <div class="comment_name"> <%= comment.commenter %> <a class="reply" href="#">Reply</a> </div>
              <div class="comment_date"><i class="icon-time"></i> March 1, 2013</div>
              <div class="the_comment">
                <p><%= comment.body %> <%= link_to 'Delete', [comment.post, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini' %></p>
              </div>
            </div>
          </div>
        <% end %>
        </div>
      </div>
      <div class="new_comment">
        <h4>Add Comment</h4>
        <%= simple_form_for([@post, @post.comments.build]) do |f| %>
        <%= f.error_notification %>
          <div class="row">
            <div class="span4">
              <%= f.input :commenter %>
            </div>
            <div class="span4">
              <%= f.input :email %>
            </div>
          </div>
          <div class="row">
            <div class="span8">
              <%= f.input :body %>
            </div>
          </div>
          <div class="row">
            <div class="span8"> <%= f.submit %> </div>
          </div>
        <% end %>
      </div>
    </div>
    <div id="sidebar" class="span4">
      <h4>Recent</h4>
        <ul class="media-list">
          <%= render 'latest' %>
        </li>
      </ul>
      <p><%= link_to 'New Post', new_post_path %></p>
    </div>
  </div>
</section>
