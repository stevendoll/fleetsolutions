<%= simple_form_for([@equipment.opportunity, @equipment]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :equipment_type %>
    <%= f.input :quantity %>
    <%= f.input :hours_per_year %>
    <%= f.input :fuel_per_hour %>
    <%= f.input :percent_propane %>
      <% if user_signed_in? %>
        <% if current_user.has_role? :admin %>
          <%= f.input :conversion_cost %>
        <% end %>
      <% end %>
    <%= f.input :propane_factor %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
