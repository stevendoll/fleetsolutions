<h1>Listing opportunities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Opportunity type</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Pays for fuel</th>
      <th>Fueling location</th>
      <th>Propane royalties</th>
      <th>Propane turnkey royalties</th>
      <th>Propane price</th>
      <th>Propane cost</th>
      <th>Propane turnkey cost</th>
      <th>Gasoline price</th>
      <th>Annual management charge</th>
      <th>Conversion margin</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= opportunity.name %></td>
        <td><%= opportunity.description %></td>
        <td><%= opportunity.opportunity_type %></td>
        <td><%= opportunity.phone %></td>
        <td><%= opportunity.email %></td>
        <td><%= opportunity.address_1 %></td>
        <td><%= opportunity.address_2 %></td>
        <td><%= opportunity.city %></td>
        <td><%= opportunity.state %></td>
        <td><%= opportunity.zip %></td>
        <td><%= opportunity.pays_for_fuel %></td>
        <td><%= opportunity.fueling_location %></td>
        <td><%= opportunity.propane_royalties %></td>
        <td><%= opportunity.propane_turnkey_royalties %></td>
        <td><%= opportunity.propane_price %></td>
        <td><%= opportunity.propane_cost %></td>
        <td><%= opportunity.propane_turnkey_cost %></td>
        <td><%= opportunity.gasoline_price %></td>
        <td><%= opportunity.annual_management_charge %></td>
        <td><%= opportunity.conversion_margin %></td>
        <td><%= link_to 'Show', opportunity %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
        <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

