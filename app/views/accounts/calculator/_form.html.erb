<%= simple_form_for @account, url: wizard_path(:account_id => @account.id) do |f| %>
  <% if @account.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this item from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= yield f %>
  
  <div class="actions">
    <%= f.submit "Next", :class => "btn btn-primary btn-large" %>
    or <%= link_to "skip this step", next_wizard_path %>
  </div>
<% end %>

